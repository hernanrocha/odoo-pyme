    <menuitem id="sale_order_menu"
        name="Pedidos"
        parent="sale.sale_menu_root"
        groups="sales_team.group_sale_salesman"
        action="sale_order_action_view_order_tree"
        sequence="1"/>

    <!-- MENU REPORTES -->
    <menuitem id="menu_sale_report"
            name="Reportes"
            parent="sale.sale_menu_root"
            sequence="5"
            groups="sales_team.group_sale_salesman"
            action="action_order_report_all" />

</odoo>